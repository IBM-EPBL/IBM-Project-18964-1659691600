#if defined(ESP32)
#include <WiFi.h>
#include <FirebaseESP32.h>
#elif defined(ESP8266)
#include <ESP8266WiFi.h>
#include <FirebaseESP8266.h>
#endif
#include <addons/TokenHelper.h>
#include <addons/RTDBHelper.h>
#define WIFI_SSID "redhat"
#define WIFI_PASSWORD "12345678"
#define API_KEY "AIzaSyAx1dzMWm8s1T6xlY4gw0UvJyEjyK57h5s"
#define DATABASE_URL "https://minipirproject-default-rtdb.firebaseio.com/" //<databaseName>.firebaseio.com or <databaseName>.<region>.firebasedatabase.app
#define USER_EMAIL "dm2502209@gmail.com"
#define USER_PASSWORD "dummymail123"
FirebaseData fbdo;
FirebaseAuth auth;
FirebaseConfig config;
unsigned long sendDataPrevMillis = 0;
unsigned long count = 0;
String pir_cloud;
int motion;
void setup() {
  Serial.begin(115200);
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.print("Connecting to Wi-Fi");
  while (WiFi.status() != WL_CONNECTED)
  {
    Serial.print(".");
    delay(300);
  }
  Serial.println();
  Serial.print("Connected with IP: ");
  Serial.println(WiFi.localIP());
  Serial.println();
  Serial.printf("Firebase Client v%s\n\n", FIREBASE_CLIENT_VERSION);
  config.api_key = API_KEY;
  auth.user.email = USER_EMAIL;
  auth.user.password = USER_PASSWORD;
  config.database_url = DATABASE_URL;
  config.token_status_callback = tokenStatusCallback; //see addons/TokenHelper.h
  Firebase.begin(&config, &auth);
  Firebase.reconnectWiFi(true);
  Firebase.setDoubleDigits(5);
}
void loop() {
  if (Serial.available()) {
    pir_cloud = Serial.readStringUntil('\n');
    Serial.print(pir_cloud);
    int fristCommaIndex = pir_cloud.indexOf(',');
    String motiondetection = pir_cloud.substring(0, fristCommaIndex);
    motion = motiondetection.toInt();
    Firebase.setInt(fbdo, "Object_Detection_System/Motion", motion);
    if (motion == 1) {
      Firebase.setString(fbdo, "Object_Detection_System/Motion_Status", "MotionDetected");
    }
    else {
      Firebase.setString(fbdo, "Object_Detection_System/Motion_Status", "NoMotionDetected");
      
    }
  }
}
